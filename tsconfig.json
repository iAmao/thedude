{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noEmitOnError": false,
    "noEmit": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "baseUrl": ".",
    "module": "es6",
    "experimentalDecorators": true,
    "paths": {
      "client/tests/*": [
        "tests/*"
      ],
      "client/*": [
        "app/*",
        "lib/components/app/*",
        "lib/core-ui/app/*"
      ],
      "*": [
        "types/*"
      ],
      "components": [
        "lib/components/addon"
      ],
      "components/*": [
        "lib/components/addon/*"
      ],
      "components/test-support": [
        "lib/components/addon-test-support"
      ],
      "components/test-support/*": [
        "lib/components/addon-test-support/*"
      ],
      "core-ui": [
        "lib/core-ui/addon"
      ],
      "core-ui/*": [
        "lib/core-ui/addon/*"
      ],
      "core-ui/test-support": [
        "lib/core-ui/addon-test-support"
      ],
      "core-ui/test-support/*": [
        "lib/core-ui/addon-test-support/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "tests/**/*",
    "types/**/*",
    "lib/components",
    "lib/core-ui"
  ]
}
